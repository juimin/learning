<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="LetterButton">
        <item name="android:textSize">8dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/round_button</item>
    </style>

    <style name="CornerButton">
        <item name="android:textSize">7dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/round_button</item>
    </style>

    <style name="CenterButton">
        <item name="android:textSize">8dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/round_button</item>
    </style>
    
    <style name="secondaryLetterLeft">
        <item name="android:textSize">7dp</item>
        <item name="android:layout_height">11dp</item>
        <item name="android:layout_width">11dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/round_button_left</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="secondaryLetterRight">
        <item name="android:textSize">7dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/round_button_right</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
